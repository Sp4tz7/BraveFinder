{% extends 'base.html.twig' %}
{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container col-10 col-sm-3">
		<form method="post">

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					Vous êtes connecté en tant que
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">déconnecter</a>
				</div>
			{% endif %}

			<div class="row">
				<h1 class="h3 mb-3 font-weight-normal">Connecter</h1>
			</div>

			<div class="row shadow p-3 mb-5 pl-5 bg-light rounded">
				<div class="row mt-4">
					<label for="inputUsername">Utilisateur</label>
					<input type="text" value="{{ last_username }}" placeholder="Utilisateur" name="username" id="inputUsername" class="form-control" required autofocus>
				</div>

				<div class="row mt-4">
					<label for="inputPassword">Mot de passe</label>
					<input type="password" name="password" placeholder="Mot de passe" id="inputPassword" class="form-control" required>
				</div>
			</div>
			<div class="row mt-4">
				<button class="btn btn-lg btn-primary" type="submit">
					Connexion
				</button>
			</div>
		</form>
	</div>
{% endblock %}
