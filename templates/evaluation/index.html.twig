{% extends 'base.html.twig' %}

{% block title %}Evaluation index
{% endblock %}

{% block body %}
	<h1>Evaluation index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Rate</th>
				<th>Comment</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for evaluation in evaluations %}
				<tr>
					<td>{{ evaluation.id }}</td>
					<td>{{ evaluation.rate }}</td>
					<td>{{ evaluation.comment }}</td>
					<td>
						<a href="{{ path('evaluation.show', {'id': evaluation.id}) }}">show</a>
						<a href="{{ path('evaluation.edit', {'id': evaluation.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('evaluation.new') }}">Create new</a>
{% endblock %}
