{{ form_start(form) }}
<div class="row">
	<div class="col h3">
		{{ evaluation.candidate.name }}
		{{ evaluation.candidate.firstname }}
		/
		{{ evaluation.practice.name }}
	</div>
</div>

<div class="row">
	<div class="col">
		{{ form_row(form.rate) }}
	</div>
</div>

<div class="row">
	<div class="col">
		{{ form_row(form.comment) }}
	</div>
</div>

<button class="btn btn-success">
	<span class="d-sm-none">
		<i class="fas fa-save"></i>
	</span>
	<span class="d-none d-sm-block">{{button_label|default('Enregistrer')}}</span>
</button>
{{ form_end(form) }}
